[Unit]
Description=BoomCron
After=multi-user.target

[Service]
Type=idle
Restart=always
RestartSec=30
StartLimitInterval=2
StartLimitBurst=5

User=pi
Group=pi
WorkingDirectory=/home/pi/atxled/hue/cron-boom
Environment="LC_ALL=C.UTF-8"
Environment="LC_CTYPE=C.UTF-8"
ExecStart=/home/pi/atxled/hue/cron-boom/cron_boom.py
ExecStop=/bin/sleep 0

[Install]
WantedBy=multi-user.target
