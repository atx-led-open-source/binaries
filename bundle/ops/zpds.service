[Unit]
Description=ZPDS
After=multi-user.target atx-led-updater.service

[Service]
Type=idle
Restart=always
RestartSec=30
StartLimitInterval=5
StartLimitBurst=5

User=pi
Group=pi
WorkingDirectory=/home/pi/atxled/releases/
Environment="PYTHONPATH=/usr/lib/python3/dist-packages/"
Environment="LC_ALL=C.UTF-8"
Environment="LC_CTYPE=C.UTF-8"
ExecStart=/home/pi/atxled/releases/choose.py
ExecStop=/bin/sleep 0

[Install]
WantedBy=multi-user.target
