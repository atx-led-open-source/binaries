[Unit]
Description=Hue Emulator Service
After=multi-user.target atx-led-updater.service

[Service]
Type=idle
Restart=always
RestartSec=30
StartLimitInterval=5
StartLimitBurst=5

User=pi
Group=pi
WorkingDirectory=/home/pi/atxled
Environment="LC_ALL=C.UTF-8"
Environment="LC_CTYPE=C.UTF-8"
ExecStart=/home/pi/atxled/hue/ops/run-diyhue.sh
ExecStop=/usr/bin/curl http://127.0.0.1/save
ExecStop=/bin/sleep 1

[Install]
WantedBy=multi-user.target
